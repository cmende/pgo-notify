# Telegram bot API token
api_token: insert_api_token_here

# Language, see i18n folder for possible values (default: en)
lang: en

# logging level (DEBUG, INFO, WARNING, ERROR or CRITICAL) (default: WARNING)
loglevel: WARNING

# max distance in km as float (default: 2.5)
max_distance: 2.5

# server address (default: 'localhost')
server_address: localhost

# server port (default: 4000)
server_port: 4000

spots:
  - name: spot_name
    latitude: 1.23456
    longitude: 9.87654
    chat_id: 1234567
    notify_ids: [1,2,3,4,5,6,7,8,9,131,132,142,143,144,145,146,147,148,149,150,151]
